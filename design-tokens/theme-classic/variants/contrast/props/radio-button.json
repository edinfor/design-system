{
    "radio": {
        "color": {
            "checked": {
                "disabled": {
                    "background": {
                        "value": "{ids.color.palette.white.value}"
                    }
                }
            },
            "unchecked": {
                "disabled": {
                    "background": {
                        "value": "{ids.color.palette.graphite.20.value}"
                    },
                    "border": {
                        "value": "{ids.color.palette.graphite.50.value}"
                    }
                },
                "hover": {
                    "border": {
                        "value": "{ids.color.palette.black.value}"
                    }
                },
                "initial": {
                    "background": {
                        "value": "{ids.color.palette.white.value}"
                    },
                    "border": {
                        "value": "{ids.color.palette.graphite.80.value}"
                    }
                }
            }
        },
        "shadow": {
            "focus": {
                "boxshadow": {
                    "value": "0 0 0 1px {ids.color.palette.graphite.30.value}, 0 0 0 2px {ids.color.palette.azure.70.value}, 0 0 4px 5px rgba(41, 41, 41, 0.3)"
                }
            }
        }
    }
}
